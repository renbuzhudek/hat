.cs-rotate {
  display: inline-flex;
  position: relative;
  justify-content: center;
  align-items: center;
  width: 100px;
  height: 100px;
  padding: 4px;
}
.cs-rotate-show {
  border: 2px dashed #ddd;
}
.cs-rotate-sacle,
.cs-rotate-delete {
  height: 20px;
  width: 20px;
  border-radius: 50%;
  background: red;
  position: absolute;
  text-align: center;
  line-height: 16px;
}

.cs-rotate-delete {
  left: -10px;
  top: -10px;
}
.cs-rotate-sacle {
  right: -10px;
  bottom: -10px;
}
.cs-rotate-bg {
  width: 100%;
  height: 100%;
}
